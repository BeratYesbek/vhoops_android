<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:background="@drawable/custom_background_white"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView_info_alertDialogSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to send it ?"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"

        >

    </TextView>
    <ProgressBar
        android:id="@+id/progressBar_alertDialogSend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"

        android:theme="@style/ThemeOverlay.AppCompat"
        android:layout_below="@id/textView_info_alertDialogSend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"

        />

    <LinearLayout
        android:id="@+id/linearLayout_alertDialogSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView_info_alertDialogSend"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"

        >
        <Button
            android:id="@+id/btn_cancel_alertDialogSend"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Cancel"
            android:layout_marginRight="15dp"
            android:background="@drawable/custom_button_blue"
            android:textColor="#fff"
            >

        </Button>
        <Button
            android:id="@+id/btn_accept_alertSendDialog"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Send"
            android:background="@drawable/custom_button_second"
            android:textColor="#fff"
            >

        </Button>
    </LinearLayout>

</RelativeLayout>