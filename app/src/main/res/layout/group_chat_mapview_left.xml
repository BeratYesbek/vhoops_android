<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:padding="8dp"


        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView_groupChat_ProfileImage"
            android:src="@drawable/ic_profile_blue">

        </de.hdodenhof.circleimageview.CircleImageView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_toEndOf="@id/imageView_groupChat_ProfileImage"
            android:background="@drawable/custom_background_chat_left"
            app:cardBackgroundColor="#2C2F33"
            app:cardCornerRadius="8dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView_userName_groupChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vhoops"
                android:textSize="10dp"
                android:padding="2dp"
                android:textColor="#ffff"
                android:layout_marginLeft="10dp"
                >
            </TextView>
            <com.google.android.gms.maps.MapView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map_groupChat"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                >
            </com.google.android.gms.maps.MapView>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_item_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="155dp">

    </RelativeLayout>

</RelativeLayout>