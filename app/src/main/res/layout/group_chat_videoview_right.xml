<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="right"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#99AAB5"
            android:background="@drawable/custom_background_chat_right"
            app:cardCornerRadius="8dp"
            android:layout_height="match_parent">

            <VideoView
                android:id="@+id/videoView_groupChat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal|center_vertical"
                >
            </VideoView>
            <ImageButton
                android:id="@+id/btn_start_video_groupChat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/btn_circle_orange"
                android:src="@drawable/ic_play_white"

                />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/chat_item_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="155dp">

    </RelativeLayout>


</RelativeLayout>