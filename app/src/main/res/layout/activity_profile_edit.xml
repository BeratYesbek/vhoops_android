<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Views.Activities.ProfileEditActivity">

    <include
        android:id="@+id/include_profile_edit_activity"
        layout="@layout/toolbar">

    </include>

    <RelativeLayout
        android:id="@+id/relative_profile_activity_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background_white_second"
        android:layout_below="@id/include_profile_edit_activity"
        android:elevation="15dp">

        <RelativeLayout
            android:id="@+id/relative_profile_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bottom_border">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView_profile_edit_activity"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_profile_blue">

            </de.hdodenhof.circleimageview.CircleImageView>

            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="100dp"
                android:layout_toEndOf="@id/imageView_profile_edit_activity"
                android:background="@drawable/custom_button_second"
                android:drawableStart="@drawable/ic_edit"
                android:drawablePadding="-10dp"
                android:paddingLeft="7dp"
                android:text="Değiştir"
                android:textColor="#fff"
                android:textSize="12dp"
                android:textStyle="italic"

                ></Button>
        </RelativeLayout>


        <EditText
            android:id="@+id/editText_firstName_profile_activity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_profile_activity"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:hint="Ad"
            android:textColor="@color/dark_color"
            android:textSize="14dp"
            android:theme="@style/EditTextTheme"

            >

        </EditText>

        <EditText
            android:id="@+id/editText_lastName_profile_activity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_firstName_profile_activity"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:hint="Soyad"
            android:textColor="@color/dark_color"
            android:textSize="14dp"
            android:theme="@style/EditTextTheme">

        </EditText>

        <EditText
            android:id="@+id/editText_about_profile_activity"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/editText_lastName_profile_activity"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:gravity="top"
            android:hint="Hakkında"
            android:inputType="textMultiLine"
            android:textColor="@color/dark_color"
            android:textSize="14dp"
            android:theme="@style/EditTextTheme">

        </EditText>

    </RelativeLayout>

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@id/relative_profile_activity_2"
        android:layout_margin="20dp"
        android:background="@drawable/custom_button_blue"
        android:text="Güncelle"
        android:textColor="#fff"

        >

    </Button>

</RelativeLayout>