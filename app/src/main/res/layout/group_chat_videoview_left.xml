<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:padding="8dp"


        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            android:id="@+id/imageView_groupChat_ProfileImage"
            android:src="@drawable/ic_profile_blue"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:background="@drawable/custom_background_chat_left"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="8dp"
            android:layout_toEndOf="@id/imageView_groupChat_ProfileImage"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView_userName_groupChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vhoops"
                android:textSize="10dp"
                android:textColor="#ffc107"
                android:paddingLeft="7dp"
                android:paddingTop="4dp"
                >
            </TextView>
            <VideoView
                android:id="@+id/videoView_groupChat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal|center_vertical"

                >
            </VideoView>

            <ImageButton
                android:id="@+id/btn_start_video_groupChat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/btn_circle_blue"
                android:src="@drawable/ic_play_blue"
                />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/chat_item_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="152dp">

    </RelativeLayout>

</RelativeLayout>

