<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_groupChat_ProfileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_profile_blue">

        </de.hdodenhof.circleimageview.CircleImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/imageView_groupChat_ProfileImage"
            android:background="@drawable/custom_background_blue"
            android:elevation="10dp">

            <TextView
                android:id="@+id/textView_userName_groupChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:padding="2dp"
                android:textColor="#ffc107"
                android:textSize="10dp"></TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageButton
                    android:id="@+id/btn_stop_audio_groupChat"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/ic_pause_white"
                    android:visibility="invisible"

                    >

                </ImageButton>

                <ImageButton
                    android:id="@+id/btn_play_audio_groupChat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_play_white"

                    >

                </ImageButton>

                <SeekBar
                    android:id="@+id/seekBar_groupChat_audio"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@id/btn_play_audio_groupChat"
                    android:theme="@style/SeekBar">

                </SeekBar>
            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_item_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp">

    </RelativeLayout>

</RelativeLayout>

